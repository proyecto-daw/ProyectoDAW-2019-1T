function colorTab() {
  // Declare all variables
  var pagina = document.getElementById('nomPag').innerHTML;
  if (pagina == "index") {
  document.getElementById('indextab').background-color = black;
  document.getElementById('indextab').color = white;
  }
  if (pagina == "evento") {
  document.getElementById('eventtab').background-color:  black;
  }
  else{
  document.getElementById('contactstab').background-color: black;
  }
}